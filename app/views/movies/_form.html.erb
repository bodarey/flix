<div id='form'>
<%= render 'shared/errors',object: @movie  %>
<%= form_for(@movie) do |f| %>
<fieldset>
	<ol>
<%= f.label :title %><br/>
<%= f.text_field :title, autofocus: true %><br/>

<%= f.label :image_file_name %><br/>
<%= f.text_field :image_file_name, placeholder: 'jpg,png,gif' %> <br/>

<%= f.label :director %><br/>
<%= f.text_field :director, placeholder: 'director' %><br/>
<%= f.label :cast %><br/>
<%= f.text_field :cast, placeholder: 'cast' %><br/>
<%= f.label :duration %><br/>
<%= f.text_field :duration, placeholder: 'duration' %><br/>

<%= f.label :description %><br/>
<%= f.text_area :description, cols:50, rows:5, placeholder: 'description' %><br/>
<%= f.label :raiting %><br/>
<%= f.select :raiting, Movie::RATINGS, prompt: "Pick one" %><br/>
<%= f.label :total_gross, placeholder: 'total gross' %><br/>
<%= f.text_field :total_gross %><br/>
<%= f.label :released_on %><br/>
<%= f.date_select :released_on %><br/>
<%= f.label :decimal %><br/>
<%= f.text_field :decimal %><br/><br/>
   <h3>Genres:</h3>
  <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |b| %>
  
  <%=b.label(:"data-value" => b.value) { b.check_box + b.text } %>
 <br/>
 <% end %>
 <% unless @movie.new_record? %>
  <li>
    <%= f.label :slug %>
    <%= f.text_field :slug, size: 30 %>
  </li>
<% end %>
<br/>
 
 <button type="submit" class="btn btn-primary">Submit</button>
</ol>
 </fieldset>
<% end %>
<br/>
<br/>
</div>